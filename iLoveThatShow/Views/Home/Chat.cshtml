
@{
    ViewBag.Title = "Chat";
}


<style>
    body {
        background-image: url(/Content/dark10.jpg);
    }
    h3{
        font-family:'Bubbleboddy Neue Trial';
        color: #A4036F
    }
    input{
       color:#fffff5;
    }
    
</style>

<div class="row">
    <div class="col-md-6" align="center">
        <div>
            <h1>Chat</h1>
            <h3>
                Welcome to the Chat
            </h3><br />
            <p>
                You are welcome to chat about any show at any time.<br />
                Feel free to express yourself, but but there are some codes of conduct:<br /><br />
                * No personal attacks or harrassment<br />
                * No solicitation<br />
                * Please use normal English<br />
                * Do not monopolize the conversation<br />
                * No personal business<br />
                ** Any other "inappropriate" behavior will not be tolerated. <br /><br />
            Otherwise...have fun and let's chat about the shows we love!</p><br /><br />
            <input type="text" placeholder="Chat here..." id="message" align="right" />
            <input type="button" id="sendmessage" value="Send" />
        </div>
    </div>
    <div class="col-md-6">
        <div class="container" style="max-height:400px;min-height:400px;overflow-y: scroll;overflow-x: hidden;" id="messageContainer">
            <input type="hidden" id="displayname" />
            <ul id="discussion"></ul>
    </div>
</div>

@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.1.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script>
        $(function () {
            // Reference the auto-generated proxy for the hub.
            var chat = $.connection.chat;
            // Create a function that the hub can call back to display messages.
            chat.client.addNewMessageToPage = function (name, message) {
                // Add the message to the page.
                $('#discussion').append('<li><strong>' + htmlEncode(name)
                    + '</strong>: ' + htmlEncode(message) + '</li>');
                $('div#messageContainer').scrollTop($('div#messageContainer')[0].scrollHeight)
            };

            // Get the user name and store it to prepend to messages.

            $('#displayname').val(prompt('Enter your name:', ''));

            // Set initial focus to message input box.
            $('#message').focus();

            // Start the connection.
            $.connection.hub.start().done(function () {
                $('#sendmessage').click(function () {
                    // Call the Send method on the hub.
                    chat.server.send($('#displayname').val(), $('#message').val());
                    // Clear text box and reset focus for next comment.
                    $('#message').val('').focus();
                });
            });
        });
        // This optional function html-encodes messages for display in the page.
        function htmlEncode(value) {
            var encodedValue = $('<div />').text(value).html();
            return encodedValue;
        }
    </script>
}

